extern printf(*i8 s, ..vars);
extern scanf(*i8 s, ..vars);

func main() => i32 {
    let a = 0f64;
    let b = 0f64;
    let op = ' ';

    printf("Enter an expression: ");
    scanf("%lf %c %lf", &a, &op, &b);

    let result = 0f64;
    
    if op == '+' {
        result = a + b;
    }
    if op == '-' {
        result = a - b;
    }
    if op == '*' {
        result = a * b;
    }
    if op == '/' {
        result = a / b;
    }

    printf("%g %c %g = %g\n", a, op, b, result);

    return 0;
}
